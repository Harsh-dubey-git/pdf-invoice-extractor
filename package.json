{
  "name": "flowbit-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web && npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "npm run start --workspace=apps/api",
    "lint": "npm run lint --workspace=apps/web && npm run lint --workspace=apps/api",
    "clean": "npm run clean --workspace=apps/web && npm run clean --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
